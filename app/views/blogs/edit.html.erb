<div class="contents row">
   <%= form_for [@blog] do |f| %>
    <h3>
      編集する
    </h3>
    <div style="margin: 8px 100px">
      <%= f.text_area :title, placeholder: 'タイトルを書いてね！', style: 'width: 150px;height: 30px;' %>
    </div>
        <div style="margin: 20px 100px">
      <%= f.text_area :text, placeholder: '本文を書いてね！', style: 'width: 100%;height: 300px;' %>
    </div>
    <div class="row">
       <div class="col10 push1">
         <%= button_tag type: "submit", class: "btn btn--block" do %>
          投稿する<i class="icon-arrow-right"></i>
       <% end %>
        </div>
       </div>
    <% end %>
</div>